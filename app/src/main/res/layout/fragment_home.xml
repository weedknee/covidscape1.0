<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".homeFrag">

    <TextView
        android:id="@+id/homeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="left"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/homeMood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeName"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="left"
        android:text="Where are you right now? "
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/indoor"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="150dp"
        android:scaleType="centerInside"
        android:src="@drawable/indoor" />

    <ImageButton
        android:id="@+id/outdoor"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/outdoor" />

    <TextView
        android:id="@+id/textFeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="399dp"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="left"
        android:text="Recommendation"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textIndoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indoor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Indoor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textOutdoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outdoor"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Outdoor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Quiz"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCovid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/covidNewsBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="61dp"
        android:textStyle="bold"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Covid News" />

    <ImageButton
        android:id="@+id/quiz"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="428dp"
        android:scaleType="centerInside"
        android:src="@drawable/quiz" />

    <ImageButton
        android:id="@+id/covidNewsBtn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/covidnews" />

</RelativeLayout>